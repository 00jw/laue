{
  "name": "laue",
  "version": "0.0.0",
  "description": "",
  "main": "dist/laue.umd.js",
  "module": "dist/laue.js",
  "scripts": {
    "watch:lib": "rollup -c -w",
    "watch:docs": "nuxt",
    "build:lib":
      "rollup -c --environment BUILD:production && banner-cli dist/*.js",
    "build:docs": "",
    "lint": "eslint src --fix",
    "dev": "run-p watch:*",
    "build": "run-p build:*"
  },
  "keywords": [],
  "author": "qingwei-li <cinwell.li@gmail.com> (https://github.com/QingWei-Li)",
  "homepage": "https://laue.js.org",
  "license": "MIT",
  "eslintConfig": {
    "extends": "xo-space/browser",
    "rules": {
      "semi": [2, "never"],
      "no-mixed-operators": "off"
    }
  },
  "poi": {
    "entry": "docs/app.js",
    "dist": "docs/dist"
  },
  "devDependencies": {
    "banner-cli": "^0.11.1",
    "eslint": "^4.18.2",
    "eslint-config-xo-space": "^0.18.0",
    "npm-run-all": "^4.1.2",
    "nuxt": "^1.4.0",
    "rollup": "^0.56.5",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-node-resolve": "^3.2.0",
    "rollup-plugin-uglify": "^3.0.0"
  },
  "dependencies": {
    "d3-shape": "^1.2.0"
  }
}
